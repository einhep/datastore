<% provide(:title, 'Upload Files') %>
<h1>Upload The Files</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@upload) do |f| %>
    <%= render 'shared/upload_error_messages' %>

    <%= f.label :FileName %>
    <%= f.text_area :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :FilePath%>
    <%= f.file_field :file_url %>

    <%= f.submit "Upload My Files",class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
